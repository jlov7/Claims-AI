# Backend Configuration
BACKEND_PORT=8000
# Allowed hosts for CORS (comma-separated or *)
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000" # Adjust if frontend runs on a different port

# LLM Provider Configuration (Ollama by default)
LLM_PROVIDER="ollama" # Supported: "ollama", "gemini"
OLLAMA_MODEL_NAME="mistral" # Or any other model name for Ollama like "mistral:7b-instruct"
OLLAMA_BASE_URL="http://localhost:11434" # Default Ollama API
# OLLAMA_API_BASE="http://host.docker.internal:11434" # Use this if backend runs in Docker and Ollama on host

# Google Gemini Configuration (if used)
# GEMINI_API_KEY="YOUR_GEMINI_API_KEY"
# GEMINI_MODEL_NAME="gemini-pro" # Or your preferred Gemini model

# ChromaDB Configuration
CHROMA_HOST="chromadb" # As per docker-compose.yml, for backend running in Docker
# CHROMA_HOST_LOCAL="localhost" # Use this if backend runs locally and ChromaDB in Docker (port mapped to 8008)
CHROMA_PORT="8000" # Internal port for ChromaDB service
CHROMA_COLLECTION_NAME="claims_documents_mvp"

# Minio Configuration
MINIO_URL="minio:9000" # As per docker-compose.yml, for backend running in Docker
# MINIO_URL_LOCAL="localhost:9000" # Use this if backend runs locally and Minio in Docker
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="claims-data" # Example bucket name

# PostgreSQL Configuration
POSTGRES_HOST="postgres" # As per docker-compose.yml
# POSTGRES_HOST_LOCAL="localhost" # Use if backend runs locally
POSTGRES_PORT="5432"
POSTGRES_USER="claimsadmin"
POSTGRES_PASSWORD="claimsadminpassword"
POSTGRES_DB="claimsdb"

# Redpanda/Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS="redpanda:29092" # Internal Kafka address from docker-compose
# KAFKA_BOOTSTRAP_SERVERS_LOCAL="localhost:9092" # External Kafka address
KAFKA_TOPIC_CLAIM_FACTS="claim-facts"

# LangSmith (Optional Tracing)
# LANGCHAIN_TRACING_V2="true"
# LANGCHAIN_ENDPOINT="https://api.smith.langchain.com"
# LANGCHAIN_API_KEY="YOUR_LANGSMITH_API_KEY"
# LANGCHAIN_PROJECT="Claims-AI-MVP" # Example project name

# Other settings
# LOG_LEVEL="INFO"
